{% extends 'base.html.twig' %}

{% block title %}{{variableTitre}}{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('Styles/TableauBord.css') }}">
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('Scripts/TableauBord.js') }}" defer></script>
{% endblock %}

{% block body %}
    <div class="container">
        <main class="main-content">
            <h1>Tableau de bord</h1>
            <div class="section">
                <div class ="course-controls">
                    <h2>Cours consultés récemment</h2>
                    <div class="arrows">
                        <button class="prev" onclick="updateShownCourse()"><</button>
                        <button class="next" onclick="updateShownCourse()">></button>
                    </div>
                </div>
                <div class="courses">
                    {% for ue in UEs_details %}
                        <div class="course-card hidden">
                            <img src="{{ asset('Images/math.jpg') }}" alt="{{ ue.titre }}">
                            <h3>{{ ue.titre }}</h3>
                            <p>{{ ue.code }}</p>
                            <div class="course-footer">
                                <a href="{{ path("Cours", {'id': ue.id} ) }}">Accéder</a>
                                <span class="progress">Progression : 0%</span>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>

            <div class="section">
                <h2>Cours favoris</h2>
                <div class="favorites">Aucun cours marqué comme favori</div>
            </div>
            <div class="calendar-section">
                <h2>Calendar</h2>
                <div id="calendar"></div>
            </div>
        </main>
    </div>
{% endblock %}

