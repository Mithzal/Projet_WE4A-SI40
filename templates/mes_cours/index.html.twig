{% extends 'base.html.twig' %}

{% block title %}{{ variableTitre }}{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('Styles/MesCours.css') }}">
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('Scripts/MesCours.js') }}" defer></script>


{% endblock %}


{% block body %}
    <div class="container">
        <main class="main-content">
            <h1>Mes Cours</h1>
            <div class="course-controls">
                <input type="text" id="search-bar" placeholder="Rechercher un cours...">
                <select id="sort-courses">
                    <option value="name">Trier par nom</option>
                    <option value="date">Trier par dernier accès</option>
                </select>
            </div>
            <div class="courses">

                {% for cours in mesCours %}
                <div class="course-card" data-last-access={{ cours.lastAccess }}>
                    <img src="{{ asset(cours.Image) }}" alt={{ cours.ue }}>
                    <h3>{{ cours.ue }}</h3>
                    <p>{{cours.Resume}}</p>
                    <div class="course-footer">
                        <a href="{{ path('unCours') }}">Accéder</a>
                        <span class="progress">Progression : {{ cours.progression }}</span>
                    </div>
                </div>
                {% endfor %}



            </div>
        </main>
        <aside class="newsfeed">
            <h2>Fil d'actualité</h2>
            <ul>
                {% for actualite in actualites %}
                    <li>{{ actualite }}</li>
                {% endfor %}
            </ul>
        </aside>
    </div>

{% endblock %}


