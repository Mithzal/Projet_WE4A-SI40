{% extends 'base.html.twig' %}

{% block title %}{{ variableTitre }}{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('Styles/MesCours.css') }}">
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('Scripts/MesCours.js') }}" defer></script>


{% endblock %}


{% block body %}
    <div class="container">
        <main class="main-content">
            <h1>Mes Cours</h1>
            <div class="course-controls">
                <input type="text" id="search-bar" placeholder="Rechercher un cours...">
                <select id="sort-courses">
                    <option value="name">Trier par nom</option>
                    <option value="date">Trier par dernier accès</option>
                </select>
            </div>
            <div class="courses">
                {% for UEs in UEs %}
                    <div class="course-card hidden">
                        <img src="{{ asset('Images/math.jpg') }}" alt="{{ UEs.Titre }}">
                        <h3>{{ UEs.Titre }}</h3>
                        <p>{{ UEs.code }}</p>
                        <div class="course-footer">
                            <a href="#">Accéder</a>
                            <span class="progress">Progression : 0%</span>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </main>
        <aside class="newsfeed">
            <h2>Fil d'actualité</h2>
            <ul>
                {% for actualites in actualites %}
                    <li>{{ actualites.titre }}</li>
                {% endfor %}
            </ul>
        </aside>
    </div>

{% endblock %}


