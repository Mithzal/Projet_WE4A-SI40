{% extends 'base.html.twig' %}

{% block title %}Modifier un contenu{% endblock %}

{% block stylesheets %}

    <link rel="stylesheet" href="{{ asset('Styles/ajouter_contenu.css') }}">
{% endblock %}


{% block body %}
    <div class="container mt-4">
        <h1>Modifier le contenu</h1>

        {{ form_start(form, {'attr': {'class': 'contenu-form'}}) }}
        {{ form_row(form.titre) }}
        {{ form_row(form.text) }}
        {{ form_row(form.type) }}

        {% if contenu.fichier %}
            <div class="mb-3">
                <p>Un fichier est déjà attaché. Télécharger un nouveau fichier remplacera l'ancien.</p>
            </div>
        {% endif %}

        {{ form_row(form.fichier) }}

        <button type="submit" class="btn btn-primary">Enregistrer les modifications</button>
        <a href="{{ path('Cours', {'id': contenu.ueId.id}) }}" class="btn btn-secondary">Annuler</a>
        {{ form_end(form) }}
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const typeField = document.querySelector('#contenu_type');
            const fichierGroup = document.querySelector('#contenu_fichier').closest('.form-group');

            function toggleFichierField() {
                if (typeField.value === 'files') {
                    fichierGroup.style.display = 'block';
                } else {
                    fichierGroup.style.display = 'none';
                }
            }

            // Initial state
            toggleFichierField();

            // On change
            typeField.addEventListener('change', toggleFichierField);
        });
    </script>
{% endblock %}