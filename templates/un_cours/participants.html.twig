{% extends 'base.html.twig' %}

{% block title %}Participants - {{ ue.titre }}{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('Styles/UnCours.css') }}">
    <style>
        .participants-container {
            width: 80%;
            margin: 0 auto;
            padding: 100px;
        }

        .participant-section {
            margin-bottom: 30px;
        }

        .participant-list {
            width: 100%;
            border-collapse: collapse;
        }

        .participant-list th, .participant-list td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        .participant-list th {
            background-color: #f2f2f2;
        }

        .participant-list tr:hover {
            background-color: #f5f5f5;
        }

        .back-button {
            display: inline-block;
            margin-bottom: 20px;
            padding: 8px 16px;
            background-color: #4CAF50;
            color: white;
            text-decoration: none;
            border-radius: 4px;
        }

        .back-button:hover {
            background-color: #45a049;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="participants-container">
        <h1>Participants - {{ ue.titre }}</h1>

        <a href="{{ path('Cours', {'id': ue.id}) }}" class="back-button">Retour au cours</a>

        <div class="navbar">
            <button>Cours</button>
            <button class="active">Participants</button>
            {% if current_user.getRoles() == ['ROLE_PROF'] %}
            <button>Notes</button>
            {% endif %}
        </div>

        <div class="participant-section">
            <h2>Professeurs</h2>
            {% if professeurs|length > 0 %}
                <table class="participant-list">
                    <thead>
                        <tr>
                            <th>Nom</th>
                            <th>Prénom</th>
                            <th>Email</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for prof in professeurs %}
                            <tr>
                                <td>{{ prof.nom }}</td>
                                <td>{{ prof.prenom }}</td>
                                <td><a href="mailto:{{ prof.email }}">{{ prof.email }}</a></td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            {% else %}
                <p>Aucun professeur assigné à cette UE.</p>
            {% endif %}
        </div>

        <div class="participant-section">
            <h2>Étudiants</h2>
            {% if etudiants|length > 0 %}
                <table class="participant-list">
                    <thead>
                        <tr>
                            <th>Nom</th>
                            <th>Prénom</th>
                            <th>Email</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for etudiant in etudiants %}
                            <tr>
                                <td>{{ etudiant.nom }}</td>
                                <td>{{ etudiant.prenom }}</td>
                                <td><a href="mailto:{{ etudiant.email }}">{{ etudiant.email }}</a></td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            {% else %}
                <p>Aucun étudiant inscrit à cette UE.</p>
            {% endif %}
        </div>
    </div>
{% endblock %}