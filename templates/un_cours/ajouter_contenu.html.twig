{% extends 'base.html.twig' %}

{% block title %}Ajouter un contenu{% endblock %}


{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('Styles/ajouter_contenu.css') }}">
{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Ajouter un contenu à {{ ue.titre }}</h1>

        {{ form_start(form, {'attr': {'class': 'contenu-form'}}) }}
        {{ form_row(form.titre) }}
        {{ form_row(form.text) }}
        {{ form_row(form.type) }}
        {{ form_row(form.fichier) }}

        <button type="submit" class="btn btn-primary">Ajouter le contenu</button>
        <a href="{{ path('Cours', {'id': ue.id}) }}" class="btn btn-secondary">Annuler</a>
        {{ form_end(form) }}
    </div>

    <script>
        // Afficher/masquer le champ fichier selon le type sélectionné
        document.addEventListener('DOMContentLoaded', function() {
            const typeField = document.querySelector('#contenu_type');
            const fichierGroup = document.querySelector('#contenu_fichier').closest('.form-group');

            function toggleFichierField() {
                if (typeField.value === 'files') {
                    fichierGroup.style.display = 'block';
                } else {
                    fichierGroup.style.display = 'none';
                }
            }

            // Initial state
            toggleFichierField();

            // On change
            typeField.addEventListener('change', toggleFichierField);
        });
    </script>
{% endblock %}